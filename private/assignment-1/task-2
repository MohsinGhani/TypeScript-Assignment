// ConsoleApplication2.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <math.h>
#include <iostream>

using namespace std;


int _tmain(int argc, _TCHAR* argv[])
{
	double x, y, r, x1, y1, p;
	cout << "\n enter the center of circle x and y";
	cin >> x;
	cin >> y;
	cout << "\n enter the radius of circle r";
	cin >>  r;
	cout << "\n enter the point x1 and y1";
	cin >> x1;
	cin >> y1;
	p = (sqrt((x1 - x)*(x1 - x) + (y1 - y)*(y1 - y)));
	cout << p = (sqrt((x1 - x)*(x1 - x) + (y1 - y)*(y1 - y)));
	if (p>r)
	{
		cout << "\n point lies out side of the circle = " << p;
	}
	else
	{
		if (p<r)
		{
			cout << "\n point lies inside the circle = " << p;
		}
		else
		{
			cout << "\n point lies on the circle = ", p;
		}
	}
	return 0;
}

